import tkinter as tk
from tkinter import font

def on_name_click():
    print("Выбрано: По названию")

def on_ingredients_click():
    print("Выбрано: Из того, что есть")

def on_health_click():
    print("Выбрано: Здоровое питание")

# созд окно
root = tk.Tk()
root.title("WiseShopPlan")
root.geometry("400x300")
root.resizable(False, False)

# название
header_font = font.Font(family="Arial", size=16, weight="bold")
header = tk.Label(root, text="WiseShopPlan", font=header_font)
header.pack(pady=(30, 20))

# кнопки с понятными назвааниями
btn_font = font.Font(family="Arial", size=12, weight="bold")
btn_style = {"width": 20, "height": 2, "bg": "#8fbc8f", "fg": "white", "bd": 0, "relief": "flat", "font": btn_font}
btn_name = tk.Button(root, text="По названию", command=on_name_click, **btn_style)
btn_name.pack(pady=5)
btn_ingr = tk.Button(root, text="Из того, что есть", command=on_ingredients_click, **btn_style)
btn_ingr.pack(pady=5)
btn_health = tk.Button(root, text="Здоровое питание", command=on_health_click, **btn_style)
btn_health.pack(pady=5)

root.eval('tk::PlaceWindow . center')
root.mainloop()
